<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/date"
                style="@style/confirm_load_textView"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/tvCLDate"
                android:text="Expiry Date: " />

            <TextView
                android:id="@+id/tvCLDate"
                style="@style/confirm_load_textView"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="7dp"
                android:text="10/23/2020" />

            <LinearLayout
                android:id="@+id/llLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCLDate"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="-3dp"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/confirm_load_textView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_marginBottom="-3dp"
                    android:text="Source to Destination Add : "
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="35dp"
                android:id="@+id/lll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llLocation"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llMaterialType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llLocation">

                    <TextView
                        style="@style/confirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="Material : " />

                    <TextView
                        android:id="@+id/tvTypeOfaterial"
                        style="@style/confirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="Steel" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llMaterialType">

                    <TextView
                        style="@style/confirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="Name : "

                        />

                    <TextView
                        android:id="@+id/tvUserName"
                        style="@style/confirm_load_textView"                        android:layout_width="wrap_content"
                        android:text="User name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llName">

                    <TextView
                        style="@style/confirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="Weight : "

                        />

                    <TextView
                        android:id="@+id/tvWeight"
                        style="@style/confirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="100" />
                    <TextView
                        style="@style/confirm_load_textView"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Amount : "

                        />

                    <TextView
                        android:id="@+id/tvAmount"
                        style="@style/confirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="10000" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivMoreVert"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvCLDate"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/more_vert" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>